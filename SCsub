env_thirdparty.add_source_files(env.modules_sources, "thirdparty/MaterialX/MaterialXRenderGlsl/*.cpp")
env_thirdparty.add_source_files(env.modules_sources, "thirdparty/MaterialX/MaterialXRenderHw/*.cpp")

module_env.add_source_files(env.modules_sources, "*.cpp")
